;Dieses Programm soll die ansteigende Flanke hochz√§hlen
;Aufgabe im Mitschrieb

	DEVICE    16F84
	
;Definitionen
RA 		EQU	05H
RB		EQU	06H
AUSGANG	EQU	RB
EINGANG EQU	RA,0
RESET	EQU	RA,1
INHIBIT	EQU	RA,2
CARRY	EQU	RA,3
ZAEHLER	EQU	0CH
MIRROR	EQU	0DH

ZEROBIT	EQU	03H,2
SPEICHER EQU 0FH

	ORG	0
tReset
	CLRF	AUSGANG
	CLRF	ZAEHLER
	CLRF	MIRROR
	BCF		CARRY
	
loop
	BTFSC	RESET
	goto	tReset
	BTFSC	INHIBIT
	goto 	loop
	
	MOVF	RA,W
	MOVWF	SPEICHER
	XORWF	MIRROR,W
	BTFSC	ZEROBIT
	goto 	loop
	MOVF	SPEICHER,W
	MOVWF	MIRROR
	BTFSS	SPEICHER,0
	goto 	loop
	
	INCF	ZAEHLER
	
	MOVLW	00001111B
	ANDWF	ZAEHLER,W
	XORLW	10
	MOVLW	6
	BTFSC	ZEROBIT
	ADDWF	ZAEHLER
	MOVF	ZAEHLER,W
	XORLW 	0A0H
	BTFSC	ZEROBIT
	CLRF	ZAEHLER
	
	;BTFSC	ZEROBIT
	;BSF		CARRY
	;BTFSS	ZEROBIT
	;BCF		CARRY
	goto	loop