            <ComboBoxItem Tag="02" Content="PCL" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="03" Content="STATUS" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="05" Content="PORTA" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="06" Content="PORTB" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="07" Content="ZERO" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="0B" Content="INTCON" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="81" Content="OPTION" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="85" Content="TRISA" HorizontalAlignment="Left" />
            <ComboBoxItem Tag="86" Content="TRISB" HorizontalAlignment="Left" />
            
            <TextBox x:Name="cstmBox" Tag="00" Text="00" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged" Width="30"/>
