<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PICSimulator.View" x:Class="PICSimulator.View.SevenSegmentRegister" 
             mc:Ignorable="d" >
    <StackPanel>

        <local:_7SegmentDisplay x:Name="display" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <local:RegisterBox x:Name="box" SelectionChanged="SourceChanged" Margin="0, 5, 0, 0"/>

    </StackPanel>
</UserControl>
