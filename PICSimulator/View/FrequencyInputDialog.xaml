<Window x:Class="PICSimulator.View.FrequencyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="FrequencyInputDialog" Height="109" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="Button_Click" Margin="8" Width="60" Height="22"/>
            <Button Content="Cancel" Click="Button_Click_1" Margin="8" Width="60" Height="22"/>
        </StackPanel>

        <xctk:IntegerUpDown x:Name="nmbrCtrl" Value="1" FormatString="N0" Minimum="1" Grid.Row="0" Margin="5"/>
    </Grid>
</Window>
